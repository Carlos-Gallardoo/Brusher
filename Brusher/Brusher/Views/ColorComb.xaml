    <ContentPage.BindingContext>
        <viewmodels:PalettesViewModel />

    </ContentPage.BindingContext>
    <AbsoluteLayout>
        <StackLayout>
            <Button  HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" CornerRadius="20"  Text="Some Palettes I enjoy"></Button>
        </StackLayout>

        <CarouselView x:Name="carouselView" BackgroundColor="Pink"
                  ItemsSource="{Binding Palettes}">
        <CarouselView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Frame                          
                               Margin="5"
                               HeightRequest="500"
                               HorizontalOptions="Center"
                               VerticalOptions="CenterAndExpand">
                        <SwipeView>

                            <StackLayout BackgroundColor="White">
                                  
                                    <Label Text="{Binding Name}" 
                                           FontAttributes="Bold"
                                           FontSize="Large"
                                           HorizontalOptions="Center"
                                           TextColor="DarkCyan"
                                           VerticalOptions="Center" />
                                <Image Source="{Binding ImageUrl}" 
                                           Aspect="AspectFill"
                                           HeightRequest="400"
                                           WidthRequest="400"
                                           HorizontalOptions="Center" />
                                <Label Text="{Binding Location}"
                                           HorizontalOptions="Center" />
                                <Label Text="{Binding Details}"
                                           FontAttributes="Italic"
                                           HorizontalOptions="Center"
                                          
                                           LineBreakMode="TailTruncation" />
                            </StackLayout>
                        </SwipeView>
                    </Frame>
                </StackLayout>
            </DataTemplate>
        </CarouselView.ItemTemplate>
    </CarouselView>

       
    </AbsoluteLayout>
        
</ContentPage>